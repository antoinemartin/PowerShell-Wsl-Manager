{
  "overrides": [
    {
      "files": ["*.yaml", "*.yml"],
      "options": {
        "singleQuote": false,
        "bracketSpacing": false,
        "proseWrap": "never"
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "printWidth": 80,
        "proseWrap": "always"
      }
    },
    {
        "files": ["*.json", "*.jsonc", "*.json.j2", "*.json.tpl"],
        "options": {
          "parser": "json"
        }
    }
  ]
}
