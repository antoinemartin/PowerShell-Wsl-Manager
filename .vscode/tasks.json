{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run tests",
      "windows": {
        "command": ".\\hack\\Invoke-Tests.ps1",
        "args": []
      },
      "linux": {
        "command": "pwsh",
        "args": ["-File", "./hack/Invoke-Tests.ps1"],
      },
      "type": "shell",
      "problemMatcher": [
        "$pester"
      ],
      "presentation": {
        "reveal": "always"
      },
      "group": "test",
    },
    {
      "label": "Run tests on selected text",
      "windows": {
        "command": ".\\hack\\Invoke-Tests.ps1",
        "args": ["-Filter", "*${selectedText}*"]
      },
      "linux": {
        "command": "pwsh",
        "args": ["-File", "./hack/Invoke-Tests.ps1", "-Filter", "\"*${selectedText}*\""],
      },
      "type": "shell",
      "problemMatcher": [
        "$pester"
      ],
      "presentation": {
        "reveal": "always"
      },
      "group": "test",
    },
    {
      "label": "Run All tests",
      "windows": {
        "command": ".\\hack\\Invoke-Tests.ps1",
        "args": ["-All"],
      },
      "linux": {
        "command": "pwsh",
        "args": ["-File", "./hack/Invoke-Tests.ps1", "-All"],
      },
      "type": "shell",
      "problemMatcher": [
        "$pester"
      ],
      "presentation": {
        "reveal": "always"
      },
      "group": "test"
    },
    {
      "label": "Pre-Commit",
      "command": "pre-commit",
      "type": "shell",
      "args": ["run"],
      "presentation": {
        "reveal": "always"
      },
      "group": "test"
    },
    {
      "label": "Build Documentation",
      "windows": {
        "command": ".\\Hack\\Invoke-ReferenceDocumentationBuild.ps1",
        "args": ["-ModuleName", "Wsl-Manager", "-DestinationDirectory", ".\\docs\\usage\\reference"]
      },
      "linux": {
        "command": "pwsh",
        "args": ["-File", "./hack/Invoke-ReferenceDocumentationBuild.ps1", "-ModuleName", "Wsl-Manager", "-DestinationDirectory", "./docs/usage/reference"]
      },
      "type": "shell",
      "args": ["-ModuleName", "Wsl-Manager", "-DestinationDirectory", ".\\docs\\usage\\reference"],
      "presentation": {
        "reveal": "always"
      },
      "group": "build"
    },
    {
      "label": "Build SQLite Helper",
      "windows": {
        "command": ".\\Wsl-SQLIte\\Build-SQLiteHelper.ps1",
        "args": []
      },
      "linux": {
        "command": "pwsh",
        "args": ["-File", "./Wsl-SQLite/Build-SQLiteHelper.ps1"]
      },
      "type": "shell",
      "presentation": {
        "reveal": "always"
      },
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
  ]
}
