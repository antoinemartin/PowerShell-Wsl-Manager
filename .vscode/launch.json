  "version": "0.2.0",
  "configurations": [
    {
      "name": "PowerShell Run Pester Tests",
      "type": "PowerShell",
      "request": "launch",
      "script": "Invoke-Pester",
      "createTemporaryIntegratedConsole": true,
      "attachDotnetDebugger": true
    },
    {
      "name": "PowerShell: Windows PowerShell",
      "type": "PowerShell",
      "request": "launch",
      "sessionName": "Windows PowerShell (x64)"
    },
    {
      "name": "PowerShell: Launch InvokeTests.ps1",
      "type": "PowerShell",
      "request": "launch",
      "script": "${workspaceFolder}/hack/Invoke-Tests.ps1",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "PowerShell: Launch Selected Test",
      "type": "PowerShell",
      "request": "launch",
      "script": "${workspaceFolder}/hack/Invoke-Tests.ps1",
      "cwd": "${workspaceFolder}",
      "args": ["-Filter", "\"*${selectedText}*\""]
    }
  ]
}
